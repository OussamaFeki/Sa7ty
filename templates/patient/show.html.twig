{% extends 'base.html.twig' %}

{% block title %}Patient{% endblock %}

{% block body %}
<div class="space">
    <table class="cart_table woocommerce-cart-form">
        <thead>
            <tr>
                <th class="cart-col-Nom">Id</th>
                <th class="cart-col-Region">Region</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.region }}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="text-center mb-3">
    <a href="{{ path('app_patient_index') }}" class="btn btn-primary">Back to List</a>
</div>
<div class="text-center mb-3">
    <a href="{{ path('app_patient_edit', {'id': patient.id}) }}" class="btn btn-primary">Edit</a>
</div>
<div class="text-center">
    {{ include('patient/_delete_form.html.twig') }}
</div>



{% endblock %}
